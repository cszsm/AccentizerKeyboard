<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="6dp"
        android:left="@dimen/key_padding"
        android:right="@dimen/key_padding"
        android:top="@dimen/key_padding">

        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid
                android:color="@color/colorButtonPressedTop"/>
            <corners
                android:radius="4dp"/>
        </shape>
    </item>

    <item
        android:bottom="@dimen/key_padding"
        android:left="@dimen/key_padding"
        android:right="@dimen/key_padding"
        android:top="6dp">

        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid
                android:color="@color/colorButtonPressedBottom"/>
            <corners
                android:radius="4dp"/>
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:left="@dimen/key_padding"
        android:right="@dimen/key_padding"
        android:top="4dp">

        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid
                android:color="@color/colorButtonPressed"/>
            <corners
                android:radius="4dp"/>
        </shape>
    </item>
</layer-list>